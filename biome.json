{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "linter": {
    "enabled": false
  },
  "files": {
    "includes": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/views/**",
      "!src/components/*.js",
      "!src/*.js"
    ]
  }
}
